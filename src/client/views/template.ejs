<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/headTag.ejs") %>
    <link rel="stylesheet" href="/public/styles/styles.css">
</head>
<body class="bg-gray-900 text-gray-200 min-h-screen overflow-hidden h-lvh w-lvw">
    <%- include("./partials/navbar.ejs") %>
    <%- include("./partials/toast.ejs") %>
    
    <div class="container mx-auto px-4 py-16 h-full w-full" id="root">
        <% if (locals.renderDetails.page === "testPage") { %>
            <div id="testContent" class="flex flex-col items-center justify-evenly space-y-8 mt-4">
                <h1 class="text-5xl font-bold text-yellow-500">Let's Start Typing!</h1>
                
                <div id="timer" class="text-4xl text-center font-mono border-yellow-500">
                    05:00
                </div>
                
                <%- include("./partials/test.ejs") %>
                
                <button id="startTimer" class="w-60 h-12 rounded-full bg-yellow-600 hover:bg-yellow-500 text-white text-xl font-semibold transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-opacity-50">
                    Start
                </button>
            </div>
        <% } %>
    </div>
    
    <script src="/public/dist/scripts/bundles/<%= locals.renderDetails.scrpit%>.bundle.js"></script>
</body>
</html>